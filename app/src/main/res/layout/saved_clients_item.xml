<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">



        <TextView
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/clientInfo"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="4dp"
            />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintTop_toBottomOf="@id/clientInfo">

        <TextView
            android:layout_width="0dp"
            android:text="@string/o_chirish"
            android:layout_margin="4dp"
            android:id="@+id/deleteSavedClient"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="17sp"
            android:background="@drawable/back_of_search"
            android:layout_height="wrap_content"
            android:textColor="#E10A0A"
            android:layout_weight="50" />


        <TextView
            android:layout_width="0dp"
            android:text="@string/qo_shish"
            android:layout_margin="4dp"
            android:gravity="center"
            android:padding="8dp"
            android:id="@+id/addSavedClient"
            android:textSize="17sp"
            android:background="@drawable/back_of_search"
            android:layout_height="wrap_content"
            android:textColor="#E10A0A"
            android:layout_weight="50" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>